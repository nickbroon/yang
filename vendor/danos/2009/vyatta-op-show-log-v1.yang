	revision 2020-04-13 {
		description "Add time filtering options";
	}

	revision 2019-06-26 {
		description "Add level filtering option";
	}

	revision 2019-05-14 {
		description "Use journal instead of /var/log/messages";
	}

	revision 2017-09-14 {
		description "Initial version";
	}

	opd:augment /show:show {
		opd:command log {
			opd:help "Show system log";
			opd:on-enter "journalctl -a --no-pager";

			opd:command all {
				opd:help "Show system log";
				opd:on-enter "journalctl -a --no-pager";
				status obsolete;
			}

			opd:command tail {
				opd:help "Show the last lines of the system log";
				opd:inherit "" {
					opd:on-enter "journalctl -n $4";
				}

				opd:argument number {
					opd:help "Show the last lines of the system log";
					type uint32;
				}
			}

			opd:option level {
				opd:help "Logging level";
				opd:on-enter "journalctl -a --no-pager --priority $4";

				type syslog:level;

				opd:option since {
					opd:help "Show messages newer than";
					opd:on-enter "vyatta-journalctl-wrapper-rfc3339-to-systemd-time -a --no-pager --priority $4 --since \"$6\"";

					type ietf:date-and-time {
						opd:help "Timestamp messages should be newer than";
						opd:pattern-help '<ietf rfc3339 timestamp>';
					}

					opd:option until {
						opd:help "Show messages older than";
						opd:on-enter "vyatta-journalctl-wrapper-rfc3339-to-systemd-time -a --no-pager --priority $4 --since \"$6\" --until \"$8\"";

						type ietf:date-and-time {
							opd:help "Timestamp messages should be older than";
							opd:pattern-help '<ietf rfc3339 timestamp>';
						}
					}
				}

				opd:option until {
					opd:help "Show messages older than";
					opd:on-enter "vyatta-journalctl-wrapper-rfc3339-to-systemd-time -a --no-pager --priority $4 --until \"$6\"";

					type ietf:date-and-time {
						opd:help "Timestamp messages should be older than";
						opd:pattern-help '<ietf rfc3339 timestamp>';
					}
				}
			}

			opd:option since {
				opd:help "Show messages newer than";
				opd:on-enter "vyatta-journalctl-wrapper-rfc3339-to-systemd-time -a --no-pager --since \"$4\"";

				type ietf:date-and-time {
					opd:help "Timestamp messages should be newer than";
					opd:pattern-help '<ietf rfc3339 timestamp>';
				}

				opd:option until {
					opd:help "Show messages older than";
					opd:on-enter "vyatta-journalctl-wrapper-rfc3339-to-systemd-time -a --no-pager --since \"$4\" --until \"$6\"";

					type ietf:date-and-time {
						opd:help "Timestamp messages should be older than";
						opd:pattern-help '<ietf rfc3339 timestamp>';
					}
				}
			}

			opd:option until {
				opd:help "Show messages older than";
				opd:on-enter "vyatta-journalctl-wrapper-rfc3339-to-systemd-time -a --no-pager --until \"$4\"";

				type ietf:date-and-time {
					opd:help "Timestamp messages should be older than";
					opd:pattern-help '<ietf rfc3339 timestamp>';
				}
			}
		}
	}
