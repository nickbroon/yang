	namespace "urn:vyatta.com:mgmt:vyatta-op-set-system-image:1";
	prefix vyatta-op-set-system-image-v1;

	import vyatta-opd-extensions-v1 {
		prefix opd;
	}
	import vyatta-op-set-v1 {
		prefix set;
	}
	import vyatta-op-set-system-v1 {
		prefix system;
	}

	organization "AT&T Inc.";
	contact
