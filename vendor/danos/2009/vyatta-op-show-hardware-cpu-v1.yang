		Defines the 'cpu' level under the 'show hardware' command for operational CLI";

	revision 2018-06-19 {
		description "Initial version";
	}

	feature cpu-history {
		description "CPU utilization history";
	}

	opd:augment /show:show/hardware:hardware {
		opd:command cpu {
			opd:help "Show CPU info";
			opd:on-enter 'lscpu';

			opd:command detail {
				opd:help "Show system CPU details";
				opd:on-enter 'cat /proc/cpuinfo';
			}

			opd:command summary {
				opd:help "Show CPUs on system";
				opd:on-enter 'vyatta-cpu-summary.pl';
			}

			opd:command history {
				if-feature cpu-history;
				opd:help "Display CPU utilization history";
				opd:on-enter 'vyatta-cpu-history-client show';
			}
		}
	}
}