module vyatta-op-show-hardware-cpu-v1 {
	namespace "urn:vyatta.com:mgmt:vyatta-op-show-hardware-cpu:1";
	prefix vyatta-op-show-hardware-cpu-v1;

	import vyatta-opd-extensions-v1 {
		prefix opd;
	}
	import vyatta-op-show-v1 {
		prefix show;
	}
	import vyatta-op-show-hardware-v1 {
		prefix hardware;
	}

	organization "AT&T Inc.";
	contact
		"AT&T
		 Postal: 208 S. Akard Street
				 Dallas, TX 75202
		 Web: www.att.com";

	description
