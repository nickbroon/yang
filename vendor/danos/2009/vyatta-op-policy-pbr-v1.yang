		prefix show;
	}
	import vyatta-op-show-log-v1 {
		prefix show-log;
	}
	import vyatta-op-clear-v1 {
		prefix clear;
	}
	import vyatta-op-npf-types-v1 {
		prefix op-npf-types;
	}

